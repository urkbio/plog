body {
    font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
    max-width: 720px;
    margin: 2em auto;
    padding: 0 1em;
    background-color: #fefefe;
    color: #222;
    line-height: 1.6;
}

a {
    color: #007acc;
    text-decoration: none;
}

a:hover {
    text-decoration: underline;
}

h1 {
    text-align: center;
    color: #333;
}

h2, h3 {
    color: #333;
}

ul {
    padding-left: 1.2em;
}

ul, li {
    font-size: 1.08em;  /* 放大字体 */
}

textarea, input[type="text"] {
    width: 100%;
    font-family: monospace;
    padding: 0.5em;
    margin-bottom: 1em;
    border: 1px solid #ccc;
    border-radius: 4px;
    box-sizing: border-box;
}

button {
    background-color: #007acc;
    color: white;
    border: none;
    padding: 0.6em 1.2em;
    border-radius: 4px;
    cursor: pointer;
}

button:hover {
    background-color: #005e99;
}

footer {
    margin-top: 4em;
    padding-top: 1em;
    font-size: 0.9em;
    color: #666;
    text-align: center;
    border-top: 1px solid #ddd;
}
